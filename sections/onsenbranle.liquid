<section class="py-10" style="background-color: {{ section.settings.bg_color}}">
  <div class="w-full md:w-11/12 mx-auto max-w-7xl">

    <!-- section header -->
    {% if section.settings.header != blank %}
      <div class="text-center mb-8">
        <h2 class="text-[28px] px-5 leading-9" style="color: {{ section.settings.text_color }}">{{ section.settings.header }}</h2>
      </div>
   {% endif %}

  </div>
</section>

{% schema %}
  {
    "name": "Onsenbranle",
    "settings": [
      {
       "type": "text",
       "id": "header",
       "label": "Header",
       "default": "On sâ€™occupe de tout pour vous !"
       },
      {
          "type": "header",
          "content": "colors"
        },
        {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#fff"
      },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#000"
        }
    ]
  }
{% endschema %}
