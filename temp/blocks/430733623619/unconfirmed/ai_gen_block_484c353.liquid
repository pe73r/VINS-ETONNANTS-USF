{% doc %}
  @prompt
    Mon produit et sa description 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-description-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-product-description__image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-product-description__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-product-description__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-description__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-description__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-description__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-product-description__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-product-description__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-product-description__description-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-product-description__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-product-description__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-product-description-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }
{% endstyle %}

<div class="ai-product-description-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-description__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.product %}
      {% if block.settings.product.featured_image %}
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 800 }}"
          alt="{{ block.settings.product.featured_image.alt | escape }}"
          class="ai-product-description__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.product.featured_image.width }}"
          height="{{ block.settings.product.featured_image.height }}"
        >
      {% else %}
        <div class="ai-product-description__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-description__image-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-product-description__empty-state-{{ ai_gen_id }}">
          Sélectionnez un produit
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-product-description__content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      {% if block.settings.show_title %}
        <h2 class="ai-product-description__title-{{ ai_gen_id }}">
          {{ block.settings.product.title }}
        </h2>
      {% endif %}

      {% if block.settings.show_price %}
        <div class="ai-product-description__price-{{ ai_gen_id }}">
          {{ block.settings.product.price | money }}
        </div>
      {% endif %}

      {% if block.settings.show_description and block.settings.product.description != blank %}
        <div class="ai-product-description__description-{{ ai_gen_id }}">
          {{ block.settings.product.description }}
        </div>
      {% endif %}

      {% if block.settings.show_button %}
        <a
          href="{{ block.settings.product.url }}"
          class="ai-product-description__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    {% else %}
      <h2 class="ai-product-description__title-{{ ai_gen_id }}">
        Titre du produit
      </h2>
      <div class="ai-product-description__price-{{ ai_gen_id }}">
        {{ 2500 | money }}
      </div>
      <div class="ai-product-description__description-{{ ai_gen_id }}">
        La description de votre produit apparaîtra ici. Sélectionnez un produit pour afficher ses informations.
      </div>
    {% endif %}
  </div>
</div>

